<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxjava.projet_pharmacie.Controller.EditMedicament">

    <!-- Ã‰tiquettes -->
    <Label layoutX="20.0" layoutY="20.0" text="Code :" />
