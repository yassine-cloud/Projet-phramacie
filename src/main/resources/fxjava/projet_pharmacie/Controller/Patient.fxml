<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fxjava.projet_pharmacie.Controller.PatientController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Table View -->
    <TableView fx:id="patientTable" layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="580.0">
        <columns>
            <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
            <TableColumn fx:id="telColumn" prefWidth="100.0" text="Téléphone" />
            <TableColumn fx:id="emailColumn" prefWidth="200.0" text="E-mail" />
            <TableColumn fx:id="dateNaisColumn" prefWidth="130.0" text="Date de Naissance" />
        </columns>
    </TableView>

    <!-- Add Patient Button -->
    <Button fx:id="addPatientButton" layoutX="10.0" layoutY="320.0" text="Ajouter Patient" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

</AnchorPane>
