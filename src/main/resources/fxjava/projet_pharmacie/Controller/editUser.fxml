<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxjava.projet_pharmacie.Controller.editUser">

    <!-- Étiquettes -->
    <Label layoutX="20.0" layoutY="20.0" text="Code :" />
    <Label layoutX="20.0" layoutY="60.0" text="Nom :" />
    <Label layoutX="20.0" layoutY="100.0" text="Téléphone :" />
    <Label layoutX="20.0" layoutY="140.0" text="E-mail :" />
    <Label layoutX="21.0" layoutY="180.0" text="Password :" />

    <!-- Champs de texte (read-only) -->
    <TextField fx:id="codeField" disable="true" layoutX="120.0" layoutY="20.0" />
    <TextField fx:id="nameField" layoutX="120.0" layoutY="60.0" />
    <TextField fx:id="phoneField" layoutX="120.0" layoutY="100.0" />
    <TextField fx:id="emailField" layoutX="120.0" layoutY="140.0" />

    <!-- Boutons -->
    <Button fx:id="editUserButton" layoutX="20.0" layoutY="260.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Modifier" />
    <Button fx:id="cancel" layoutX="120.0" layoutY="260.0" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Annuler" />
    <Button fx:id="deleteUserButton" layoutX="220.0" layoutY="260.0" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Supprimer" />
   <Label layoutX="20.0" layoutY="220.0" text="Re Password :" />
   <PasswordField fx:id="passField" layoutX="120.0" layoutY="176.0" />
   <PasswordField fx:id="rePassField" layoutX="120.0" layoutY="216.0" />

</AnchorPane>
