<AnchorPane prefHeight="579.0" prefWidth="914.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxjava.projet_pharmacie.Controller.LoginController">
<!-- Logo -->
<ImageView fitHeight="209.0" fitWidth="306.0" layoutX="322.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
   <image>
      <Image url="@../Assets/Logo_Pharmacie_centrale_de_Tunisie.png" />
   </image>
</ImageView>

        <!-- Title -->
<Label layoutX="388.0" layoutY="148.0" prefHeight="47.0" prefWidth="174.0" style="-fx-font-weight: bold;" text="Connexion" textAlignment="CENTER">
<font>
   <Font size="32.0" />
</font>
</Label>

        <!-- Email Field -->
<Label layoutX="269.0" layoutY="240.0" prefHeight="35.0" prefWidth="99.0" text="Email :">
<font>
   <Font size="24.0" />
</font>
</Label>
<TextField fx:id="email" layoutX="293.0" layoutY="289.0" prefHeight="44.0" prefWidth="354.0" promptText="Votre Email">
<font>
   <Font size="20.0" />
</font>
</TextField>

        <!-- Password Field -->
<Label layoutX="268.0" layoutY="358.0" prefHeight="35.0" prefWidth="226.0" text="Mot de passe :">
<font>
   <Font size="24.0" />
</font>
</Label>
<PasswordField fx:id="password" layoutX="293.0" layoutY="409.0" prefHeight="44.0" prefWidth="354.0" promptText="*****">
<font>
   <Font size="20.0" />
</font>
</PasswordField>

        <!-- Connect Button -->
<Button fx:id="but" layoutX="394.0" layoutY="491.0" onAction="#seConnecter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Se connecter">
<font>
   <Font size="23.0" />
</font>
</Button>
        </AnchorPane>
